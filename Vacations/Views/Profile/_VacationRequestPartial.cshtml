@model Vacations.Models.RequestCreationViewModel
@using (Html.BeginForm("RequestVacation", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "submitForm" }))
{
    @Html.AntiForgeryToken()
    <div class="container m-0 p-0 ">
        <div class="container container-rounded" style="border: 1px solid #757575 !important;">
            <div class="row" style="border-bottom:solid #808080 1px;">
                <div class="container-fluid bg-global text-white" style="background-color:#2e2e2e !important;">
                    <strong>Vacation Request</strong>
                </div>
            </div>
            <div class="row">
                <div class="container-fluid bg-dark text-white">
                    <div class="row">
                        <div class="col-6 col-ms-12">
                            <ul class="list-unstyled zebra">
                                <li> <label for="vacationTypeSelect">vacation type</label></li>
                                @Html.DropDownList("VacationTypesSelectList", null, null, new { @class = "form-control bg-dark border-grey colorWhite" })
                            </ul>
                        </div>
                        <div class="col-6 col-ms-12">
                            <ul class="list-unstyled zebra">
                                <li>
                                @Html.LabelFor(m => m.DateOfBegin, new { @class = "control-label" })
                                </li>
                                <li>
                                    <input type="date" max="3000-12-31" min="1000-01-01" class="form-control bg-dark border-grey colorWhite" id="DateOfBegin" onchange="CalcDiff()" name="DateOfBegin">
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-ms-12">
                            <ul class="list-unstyled zebra">
                                <li>
                                    @Html.LabelFor(m => m.Comment, new { @class = "control-label" })
                                </li>
                                <li>
                                    <textarea class="form-control bg-dark border-grey" name="Comment" rows="6" style="resize:none;color:white; width:314px;height:200px;"></textarea>
                                </li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12 col-ms-12">
                                    <ul class="list-unstyled zebra">
                                        <li> @Html.LabelFor(m => m.DateOfEnd, new { @class = "control-label" })</li>
                                        <li>
                                            <input type="date" max="3000-12-31" min="1000-01-01" onchange="CalcDiff()" class="form-control bg-dark colorWhite border-grey" id="DateOfEnd" name="DateOfEnd">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row" style="margin-top:68px;">
                                <div class="col-4 col-xs-12">
                                    <ul class="list-unstyled zebra m-0">
                                        <li> <label for="among">amount</label></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="container m-0 p-0 text-light">@Html.TextBoxFor(m => m.Duration, new { @class = "form-control bg-dark field-days-width border-grey colorWhite", @readonly = "readonly", @maxlength = "2", @id = "Duration", @name = "Duration", @placeholder = "XX", @style = "display:inline; max-width:45px;" }) Duration @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "Denied" })</div>
                                </div>
                                <p></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-ms-12">
                            <ul class="list-unstyled zebra">
                                <li>
                                    <input onclick="window.history.back()" style="width:120px;text-align:center" class="float-right form-control bg-dark button-cancel border-grey" value="CANCEL" />
                                </li>
                            </ul>
                        </div>
                        <div class="col-6 bg-dark">
                            <ul class="list-unstyled zebra">
                                <li>
                                    <input type="submit" onclick="DisableOnClick()" class="form-control bg-dark button-done border-grey bt-gradient" style="height:40px !important; padding-top:5px;" id="Done" value="DONE" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



